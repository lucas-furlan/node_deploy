{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>


  {{else}}
{{/each}}
<h2>Lista de Usuarios</h2>
<hr>
<a href="/usuarios/registro"><button class="btn btn-primary mb-4">Novo Usuario</button></a><br>
{{#each usuarios}}


  <div class="card">
    <div class="card-body">
        <input type="hidden" name="id" value="{{_id}}">
        <h4>{{nome}}</h4>
        <small>Email: {{email}}</small><br>
        {{#if eAdmin}}
        <small>Administrador: Sim</small><br>
        {{else}}
        <small>Administrador: Não</small><br>
        {{/if}}
        
        {{#if eAdmin}}
          <form action="/admin/listagem/usuario" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-success mt-2">Tornar Usuário</button>
        </form>       
        {{else}}
        <form action="/admin/listagem/administrador" method="post">
          <input type="hidden" name="id" value="{{_id}}">
          <button type="submit" class="btn btn-primary mt-2">Tornar administrador</button>
        </form>
        {{/if}}
        <form action="/admin/listagem/deletar" method="post">
          <input type="hidden" name="id" value="{{_id}}">
          <button type="submit" class="btn btn-danger mt-2">Deletar Usuario</button>
        </form>
    </div>
  </div>



{{else}}
{{/each}}

