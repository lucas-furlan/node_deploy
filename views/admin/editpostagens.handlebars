{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>


  {{else}}
{{/each}}

<h4>Editar Postagem</h4>
<div class="card">
  <div class="card-body">
    <form class="" action="/admin/postagens/edit" method="POST">
      <input type="hidden" name="id" value="{{postagem._id}}">
      <label for="titulo">Título: </label>
      <input type="text" name="titulo" value="{{postagem.titulo}}" class="form-control" required>
      <label for="titulo">Slug: </label>
      <input type="text" name="slug" value="{{postagem.slug}}" class="form-control" required>
      <label for="titulo">Descrição: </label>
      <input type="text" name="descricao" value="{{postagem.descricao}}" class="form-control" required>
      <label for="titulo">Conteudo: </label>
      <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
      <label for="categoria">Categoria: </label>
      <select name="categoria" class="custom-select">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>
      <button type="submit" class="btn btn-success mt-4">Criar postagem</button>
    </form>
  </div>
</div>
