{{#each erros}}
  <div class="alert alert-danger">
      {{texto}}
  </div>


{{else}}
{{/each}}

<div class="card">
  <div class="card-body">
    <h4>Nova Postagem</h4>
    <form class="" action="/admin/postagens/nova" method="POST">
      <label for="titulo">Título: </label>
      <input type="text" name="titulo" value="" class="form-control" required>
      <label for="titulo">Slug: </label>
      <input type="text" name="slug" value="" class="form-control" required>
      <label for="titulo">Descrição: </label>
      <input type="text" name="descricao" value="" class="form-control" required>
      <label for="titulo">Conteudo: </label>
      <textarea name="conteudo" class="form-control" required></textarea>
      <label for="categoria">Categoria: </label>
      <select name="categoria" class="custom-select">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>
      <button type="submit" class="btn btn-success mt-4">Criar postagem</button>
    </form>
  </div>
</div>
